---
import Subtitle from "@/components/shared/Subtitle.astro";
import { LINK_PATHS } from "@/lib/const";
import { makeTitle } from "@/lib/utils";
import type { JardinesContent } from "@i18n/layouts/jardines";
import { Icon } from "astro-icon/components";

type Props = {
  content: JardinesContent["pricing"];
};
const { content } = Astro.props;
---

<section class="max-w-6xl mx-auto mb-10">
  <header>
    <Subtitle class={"px-4 leading-9"}>{makeTitle(content.title)}</Subtitle>
  </header>
  <main>
    <div
      class="p-5 bg-accent/10 rounded-lg flex flex-col md:justify-center md:w-full w-[90%] mr-auto"
    >
      <Subtitle as="h3" class={"text-lg md:text-2xl text-primary"}
        >{content.help.title}</Subtitle
      >
      <div class="content-container">
        {content.help.body.map((p) => <p>{p}</p>)}
      </div>
    </div>
    <div
      class="h-full flex flex-col justify-center p-5 rounded-lg bg-accent/10 w-[90%] ml-auto md:w-auto"
    >
      <div class="">
        <Subtitle as="h3" class={"text-lg md:text-2xl text-primary"}
          >{makeTitle(content.pricing.title)}</Subtitle
        >
        <div class="content-container">
          {content.pricing.body.map((p) => <p>{p}</p>)}
        </div>
      </div>
    </div>
    <div
      class="p-5 bg-accent/10 rounded-lg flex flex-col md:justify-center md:w-full w-[90%] mx-auto gap-y-2"
    >
      <Subtitle
        as="h3"
        class={"text-lg md:text-2xl text-center leading-7 text-primary"}
        >{content.help_someone.title}</Subtitle
      >
      <div class="content-container md:text-center w-[90%] mx-auto">
        {content.help_someone.body.map((p) => <p>{p}</p>)}
      </div>
      <a
        href={LINK_PATHS["PAYPAL"]}
        target="_blank"
        class="w-full bg-accent uppercase font-black py-2 rounded-lg flex gap-2 justify-center text-white items-center"
      >
        <span class="text-sm md:text-xl"
          >{content.help_someone.call_action}</span
        >
        <Icon name="ri:paypal-fill" class={"size-5"} />
      </a>
    </div>
  </main>
  <aside class="mt-5">
    <div
      class="bg-accent/20 size-full rounded-lg flex justify-center items-center flex-col aspect-9/3 font-title"
    >
      <h3
        class="px-[10%] font-black text-primary text-[3vh] uppercase leading-7"
      >
        {makeTitle(content.get_own.title)}
      </h3>
    </div>
    <div
      class="rounded-lg bg-secondary/15 mt-2 p-5 md:py-0 md:mt-0 md:text-sm grid place-content-center min-h-full"
    >
      <div class="content-container md:text-sm!">
        {content.get_own.body.map((p) => <p>{p}</p>)}
      </div>
    </div>
    <div
      class="bg-primary-900 md:size-full rounded-lg grid grid-rows-[auto_auto] grid-cols-1 mt-10 md:mt-0 py-2 md:p-0"
    >
      <Subtitle
        as="h4"
        class={"text-white font-black text-base md:text-2xl px-10 pt-4 md:mb-4 md:mt-auto uppercase"}
        >{content.call_action.text}</Subtitle
      >
      <button
        id="contact-btn"
        class="bg-accent/50 h-[80%] w-[90%] md:w-1/2 text-base py-2 mx-auto md:text-2xl max-h-10 rounded-full font-black md:font-semibold md:p-0 md:capitalize md:mr-10 md:ml-auto uppercase text-white"
        >{content.call_action.btn}</button
      >
    </div>
  </aside>
</section>
<style>
  @reference "@styles/global.css";
  .content-container {
    @apply flex flex-col gap-4 md:gap-2 text-sm md:text-base;
  }
  p {
    max-width: 65ch;
    text-wrap: pretty;
  }
  section {
    @apply px-4;
  }
  aside {
    display: grid;
    grid-template-columns: 1fr;
    grid-auto-rows: auto;
  }
  main {
    @apply mt-5 flex gap-y-5 flex-col;
  }
  @media (min-width: theme(--breakpoint-md)) {
    main {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      grid-template-rows: 1fr;
      column-gap: 2rem;
    }
    aside {
      grid-template-columns: 20vw 25vw 1fr;
      column-gap: 2rem;
      grid-template-rows: 30vh;
    }
  }
</style>
