---
import { cn } from "@/lib/utils";
import type { ImageMetadata } from "astro";
import Image from "astro/components/Image.astro";
import type { HTMLAttributes } from "astro/types";

type Props = {
  src: ImageMetadata;
  alt: string;
} & HTMLAttributes<"div">;

const { src, alt, class: className, ...rest } = Astro.props;
---

<div
  class={cn(
    "w-full  aspect-16/12 md:h-full flex justify-center items-center rounded-lg overflow-hidden",
    className,
  )}
  {...rest}
>
  <Image src={src} alt={alt} class="min-h-full w-full object-cover" />

  <style></style>
</div>
