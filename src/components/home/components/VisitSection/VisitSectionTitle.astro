---
import VisitSectionLink from "@/components/home/components/VisitSection/VisitSectionMoreInfo.astro";
import Subtitle from "@/components/shared/Subtitle.astro";
import { cn } from "@/lib/utils";
import type { Home } from "@i18n/layouts/home";
import type { HTMLAttributes } from "astro/types";

type Props = {
  content: Home["visit_section"];
} & HTMLAttributes<"div">;
const { content, class: className, ...rest } = Astro.props;
const { title: label } = content;
---

<header
  class={cn(
    "flex items-center md:justify-center md:size-full flex-col",
    className,
  )}
  {...rest}
>
  <Subtitle
    className="capitalize text-primary-900 md:text-accent md:text-center text-right"
  >
    {label}
  </Subtitle>
  <VisitSectionLink content={content} class={"hidden md:grid"} />
</header>
