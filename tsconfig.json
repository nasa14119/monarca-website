{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@types": ["./src/lib/types.ts"],
      "@i18n/*": ["./src/i18n/*"],
      "@/*": ["./src/*"]
    }
  }
}
